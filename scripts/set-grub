# set-grub
# System - Set Grub Timeout to 1 second
# Set Grub Timeout to 1 second
echo -e "Running: System - Set Grub Timeout to 1 second - ./scripts/set-grub"

sudo sed -i 's/GRUB_TIMEOUT=.*/GRUB_TIMEOUT=1/' /etc/default/grub &&
sudo update-grub

if [ $? -eq 0 ]; then
   echo -e "\\nOK\\n"
else
   echo -e "\\nFAIL\\n"
fi
